<section class='flex w-full min-w-[350px] max-w-[450px] flex-col bg-dark1'>
  <div class='mx-3'>
    {{{ChatProfileBar}}}
  </div>
  <div class='scrollbar h-full overflow-y-auto'>
    {{#each chats.data}}
      {{{ChatPreview
        name=title
        message=last_message.content
        time=last_message.time
        messageCount=unread_count
        id=id
        active=(isEqual id ../chats.activeChatId)
      }}}
    {{/each}}
  </div>
  <div class='bottom-0 h-[1px] w-full self-end'></div>
</section>
